<%= form_with(model: asignatura_registro, local: true) do |form| %>
  <% if asignatura_registro.errors.any? %>
    <div id="error_explanation">
      <h2>Los siguientes errores no permitieron que este registro se guardara:</h2>

      <ul>
        <% asignatura_registro.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :clave %>
    <%= form.text_field :clave %>
  </div>

  <div class="field">
    <%= form.label :creditos %>
    <%= form.text_field :creditos %>
  </div>

  <div class="field">
    <%= form.label :programa_posgrado_registro_id %>
    <%= collection_select(:asignatura_registro, :programa_posgrado_registro_id, ProgramaPosgradoRegistro.all.order(nombre: :asc), :id, :nombre, {prompt: 'Seleccione'}, class: 'form-control') %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



<h1>Tipo Casos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_casos.each do |tipo_caso| %>
      <tr>
        <td><%= tipo_caso.nombre %></td>
        <td><%= link_to 'Mostrar', tipo_caso %></td>
        <td><%= link_to 'Editar', edit_tipo_caso_path(tipo_caso) %></td>
        <td><%= link_to 'Eliminar', tipo_caso, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo Caso', new_tipo_caso_path %>
